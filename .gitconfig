[user]
  name = Lee Olayvar
	email = leegit@fastmail.com
[alias]
  au = add -u
  co = checkout
  st = status --short
  cl = clone
  ci = commit
  co = checkout
  br = branch
  df = diff
  dc = diff --cached
  dfw = diff --word-diff
  dcw = diff --word-diff --cached
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --graph
  lsfp = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --first-parent
  r = rebase
  ri = rebase -i
[core]
  editor = hx
  excludesfile = ~/.gitignore_global
[push]
  default = current
  autoSetupRemote = true
[color]
  diff        = true
  status      = true
  branch      = true
  interactive = auto
  ui          = true
  pager       = true
[pager]
  diff = false
# Disabled while i setup Nix. I didn't have a key on this machine
# and it was causing git clones to fail.
#[url "git@github.com:"]
#	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
